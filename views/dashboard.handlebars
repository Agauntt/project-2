{{> signedinnav}}

<div class="container">
  <div class="row">
    <div class="col s3 miniprofile">
      <div class="card">

        <div class="card-image">
          <img class="responsive-img" src="img/user.png">
          <span class="card-title">
            <h4>#Username Mini-Profile</h4>
          </span>
          <a class="btn-floating halfway-fab waves-effect waves-light red">View Full Profile</a>
        </div>

        <div>
          <div class="card-content">
            <h6><span class="numbersTotal">{{QuantityBeers}}</span> Total Drinks</h3>
              <h6><span class="numbersUnique">{{UniqueBeers.length}}</span> Unique Beers</h3>
                <h6 class="headline">Top <span class="numberTop">{{TopBeers.length}}</span> Beers</h6>
                <ul class="userTop">
                  {{#each TopBeers}}
                  <li>{{Name}} - {{Quantity}} Drinks</li>
                  {{/each}}
                </ul>
          </div>
        </div>
      </div>
    </div>


    <div class="col s9">
      <div class="timelineAllUsers col s7">
        <ul class="timelineUsers collection with-header">
          <li class="collection-header">
            <h4>Timeline</h4>
          </li>
        </ul>
      </div>

      <div class="topUserBeers col s5">
        <ul class="topBeers collection with-header">
          <li class="collection-header">
            <h4>Top Beers</h4>
          </li> 
        </ul>
      </div>

    </div>
  </div>
</div>
</div>