{{> signedinnav}}

<div class="container">
    <div class="row whole-row">
        <div class="card z-depth-1 user-profile">
            <div class="card-content grey-text text-darken-3">
                <div class="row profile-row">
                    <div class="col s4">
                        <img class="responsive-img" src="../img/user.png" alt="user">
                    </div>
                    <div class="col s8 stats">
                        <div class="row">
                            <div class="col s6">
                                <span class="card-title usernameTitle">{{User.username}}</span>
                                <h6><span class="numbersTotal">{{QuantityBeers}}</span> Total Drinks</h3>
                                    <h6><span class="numbersUnique">{{UniqueBeers.length}}</span> Unique Beers</h3>
                                        <h6 class="headline">Top {{TopBeers.length}} Beers</h6>
                                        <ul class="userTop">
                                            {{#each TopBeers}}
                                                <li>{{Name}} - {{Quantity}} Drinks</li>
                                            {{/each}}
                                        </ul>
                            </div>
                            <div class="col s6">
                                <button class="btn-small right">Add friend</button>
                            </div>
                        </div>

                    </div>
                </div>
            </div>
        </div>
        <div class="card z-depth-0 user-timeline">
            <div class="card-content grey-text text-darken-3">
                <div class="row">
                    <div class="col s12">
                        <h4><i class="far fa-clock"></i>Timeline</h4>
                        <ul class="collection userTimeline">
                            {{#each Beers}}
                                <li class="collection-item"><i class="fas fa-beer"></i> {{Name}} <i class="fas fa-question-circle grey-text"></i> <span
                                    class="right">{{Time}}</span></li>
                            {{/each}}
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
